<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/registerbackground">


    <TextView
        android:id="@+id/txtRegMotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="109dp"
        android:text="Hesabını Oluştur!"
        android:textColor="@android:color/white"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="177dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Ad Soyad"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="#ffffff"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/edtUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edtName"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Kullanıcı Adı"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="#ffffff"
        android:textSize="15sp" />


    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtUsername"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColor="@android:color/white"
        android:textColorHint="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="#ffffff"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/edtDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtEmail"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="32dp"
        android:backgroundTint="#ffffff"
        android:ems="10"
        android:hint="Doğum Tarihi"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="#ffffff"
        android:textSize="15sp" />

    <Button
        android:id="@+id/btnRegister"
        android:layout_width="153dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/edtName"
        android:layout_below="@+id/edtDate"
        android:layout_marginTop="50dp"
        android:background="@drawable/registerbtn" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/edtName"
        android:layout_below="@+id/edtDate"
        android:layout_marginTop="5dp"
        android:buttonTint="@android:color/white"
        android:text="@string/registerPolicy"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/btnRegBack"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/iconback" />

</RelativeLayout>